<!DOCTYPE html>
<html>
<head>
    <title><%= series ? 'Edit Series' : 'Add New Series' %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4"><%= series ? 'Edit Series' : 'Add New Series' %></h1>
        <form action="<%= series ? '/series/edit/' + series.id : '/series/new' %>" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= series ? series.name : '' %>" required>
            </div>
            <div class="form-group">
                <label for="coverImage">Cover Image:</label>
                <input type="text" id="coverImage" name="coverImage" class="form-control" value="<%= series ? series.coverImage : '' %>" required>
            </div>
            <div class="form-group">
                <label for="youtubeLink">YouTube Link:</label>
                <input type="text" id="youtubeLink" name="youtubeLink" class="form-control" value="<%= series ? series.youtubeLink : '' %>" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre:</label>
                <select id="genre" name="genre" class="form-control" required>
                    <% genres.forEach(genre => { %>
                        <option value="<%= genre.name %>" <%= series && series.genre === genre.name ? 'selected' : '' %>><%= genre.name %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-success"><%= series ? 'Update' : 'Create' %> Series</button>
            <a href="/series" class="btn btn-secondary">Back</a>
        </form>
    </div>
</body>
</html>