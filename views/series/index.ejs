<!DOCTYPE html>
<html>
<head>
    <title>Series Maintenance</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Series Maintenance</h1>
        <a href="/series/new" class="btn btn-primary mb-4">Add New Series</a>
        <div class="row">
            <% series.forEach(serie => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="<%= serie.coverImage %>" alt="<%= serie.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= serie.name %></h5>
                            <p class="card-text">Genre: <%= serie.genre %></p>
                            <a href="/series/edit/<%= serie.id %>" class="btn btn-warning">Edit</a>
                            <a href="/series/delete/<%= serie.id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>

